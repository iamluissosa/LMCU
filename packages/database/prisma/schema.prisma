// packages/database/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 1. EMPRESAS (TENANTS) ---
model Company {
  id            String   @id @default(uuid())
  createdAt     DateTime @default(now())
  name          String
  rif           String   @unique // J-12345678-9 (Único globalmente)
  address       String?
  phone         String?
  logoUrl       String?
  
  // Configuración Regional & Feature Flags
  baseCurrency  String   @default("USD") 
  settings      Json     @default("{\"module_inventory\": true, \"module_invoicing\": true}")

  // Relaciones
  members       CompanyMember[]
  clients       Client[]
  products      Product[]
  invoices      Invoice[]
  inventoryMovements InventoryMovement[]
}

// --- 2. USUARIOS & ROLES ---
model User {
  // CRÍTICO: Este ID vendrá de Supabase Auth, no lo generamos nosotros.
  id        String   @id 
  email     String   @unique
  fullName  String
  avatarUrl String?
  
  memberships CompanyMember[]
}

model CompanyMember {
  id        String   @id @default(uuid())
  companyId String
  userId    String
  role      Role     @default(VIEWER)
  
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Un usuario no puede tener 2 roles en la misma empresa
  @@unique([companyId, userId])
}

enum Role {
  OWNER
  ADMIN
  EDITOR
  VIEWER
}

// --- 3. CLIENTES ---
model Client {
  id          String   @id @default(uuid())
  companyId   String
  createdAt   DateTime @default(now())
  name        String
  docType     String   // V, E, J, G
  docNumber   String   // Cédula/RIF
  address     String?
  phone       String?
  email       String?
  active      Boolean  @default(true)

  company     Company  @relation(fields: [companyId], references: [id])
  invoices    Invoice[]

  // No permitir mismo cliente (Doc) en la misma empresa
  @@unique([companyId, docType, docNumber])
  @@index([companyId])
}

// --- 4. INVENTARIO (LEDGER PATTERN) ---
model Product {
  id            String   @id @default(uuid())
  companyId     String
  code          String   // SKU
  name          String
  description   String?
  
  priceBase     Decimal  @default(0) @db.Decimal(12, 2)
  taxRate       Decimal  @default(16.00) @db.Decimal(5, 2)
  isExempt      Boolean  @default(false)
  
  // Stock "Caché" (Se actualiza vía transacción)
  currentStock  Decimal  @default(0) @db.Decimal(12, 2)
  minStockAlert Decimal  @default(5) @db.Decimal(12, 2)

  company       Company  @relation(fields: [companyId], references: [id])
  movements     InventoryMovement[]
  invoiceItems  InvoiceItem[]

  // SKU único por empresa
  @@unique([companyId, code])
  @@index([companyId])
}

model InventoryMovement {
  id              String   @id @default(uuid())
  companyId       String
  productId       String
  createdAt       DateTime @default(now())
  
  type            MovementType
  quantity        Decimal  @db.Decimal(12, 2) // + Entrada, - Salida
  balanceSnapshot Decimal  @db.Decimal(12, 2) // Stock post-movimiento
  referenceId     String?  // ID de Factura
  description     String?

  company         Company @relation(fields: [companyId], references: [id])
  product         Product @relation(fields: [productId], references: [id])
  
  @@index([productId])
  @@index([companyId])
}

enum MovementType {
  IN_PURCHASE
  OUT_SALE
  ADJ_POSITIVE
  ADJ_NEGATIVE
}

// --- 5. FACTURACIÓN ---
model Invoice {
  id              String   @id @default(uuid())
  companyId       String
  clientId        String
  createdAt       DateTime @default(now())
  
  invoiceNumber   String   
  controlNumber   String?
  status          InvoiceStatus @default(DRAFT)
  
  // Multimoneda
  currencyCode    String   @default("VES")
  exchangeRate    Decimal  @default(1.0000) @db.Decimal(12, 4)
  
  // Totales
  subtotal        Decimal  @default(0) @db.Decimal(12, 2)
  taxAmount       Decimal  @default(0) @db.Decimal(12, 2)
  totalAmount     Decimal  @default(0) @db.Decimal(12, 2)
  notes           String?

  company         Company     @relation(fields: [companyId], references: [id])
  client          Client      @relation(fields: [clientId], references: [id])
  items           InvoiceItem[]

  // No duplicar número de factura en la misma empresa
  @@unique([companyId, invoiceNumber])
  @@index([companyId])
}

model InvoiceItem {
  id        String  @id @default(uuid())
  invoiceId String
  productId String
  
  quantity  Decimal @db.Decimal(12, 2)
  unitPrice Decimal @db.Decimal(12, 2)
  totalLine Decimal @db.Decimal(12, 2)

  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])
}

enum InvoiceStatus {
  DRAFT
  POSTED
  VOID
  PAID
}